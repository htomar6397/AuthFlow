# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/authflow

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email (using Gmail as example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password_or_app_password
EMAIL_FROM=Your App Name <your_email@gmail.com>

# Application
APP_NAME=AuthFlow
CLIENT_URL=http://localhost:3000

# Rate Limiting (requests per window)
API_RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
API_RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
AUTH_RATE_LIMIT_MAX=20
PASSWORD_RESET_LIMIT_WINDOW_MS=3600000  # 1 hour
PASSWORD_RESET_LIMIT_MAX=5
ACCOUNT_CREATION_LIMIT_WINDOW_MS=3600000  # 1 hour
ACCOUNT_CREATION_LIMIT_MAX=5
USERNAME_CHECK_LIMIT_WINDOW_MS=60000  # 1 minute
USERNAME_CHECK_LIMIT_MAX=30
